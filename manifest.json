{
  "manifest_version": 2,

  "name": "Tabless",
  "description": "This extension closes unused tabs",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "activeTab",
    "tabs",
    "alarms",
    "https://ajax.googleapis.com/",
    "storage"
  ],
  "content_security_policy":"script-src 'self' https://use.fontawesome.com/5ea7d79d6a.js; object-src 'self'"
}